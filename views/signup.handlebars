<div class="card m-5">
  <div class="card-header">
    <h3>Sign Up</h3>
  </div>
  <div id="signup" role="tabpanel">
    <form id="signup-form" class="card-body">
      <div>
        <label for="username-input-signup" class="form-label">Username</label>
        <input type="text" id="username-input-signup" class="form-control" />
      </div>
      <div>
        <label for="password-input-signup" class="form-label">Password</label>
        <input
          type="password"
          id="password-input-signup"
          class="form-control"
        />
      </div>
      <button type="submit" id="signup-btn" class="btn mt-3">Signup</button>
      <a href="/login">Login here!</a>
    </form>
  </div>
</div>

<script src="/js/signup.js"></script>